<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_80"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_top_round6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_100"
                android:layout_marginBottom="@dimen/dimen_5"
                android:text="@string/vipsucess"
                android:textColor="#ff1f1d1d"
                android:textSize="@dimen/dimen_18" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dimen_40">

            <ImageView
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_white_left_round" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_18"
                android:layout_marginRight="@dimen/dimen_18"
                android:background="@drawable/shape_white_dot_line" />

            <ImageView
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/shape_white_right_round" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_bottom_round6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_180"
                android:layout_height="@dimen/dimen_180"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/icon_qrcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_30"
                android:text="@string/addwx"
                android:textColor="#ff1f1d1d"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/vipsucess"
        android:layout_gravity="center_horizontal"/>


</FrameLayout>
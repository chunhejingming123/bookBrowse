<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_1"
    android:background="@drawable/layer_bottom"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dimen_12">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_20"
        android:background="@drawable/ic_msg_icon"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="还书提醒"
                android:textColor="#ff131313"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="10:25"
                android:textColor="#ffb5b5b5"
                android:textSize="10sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="您有一本书明天到期，记得及时归还哦~"
                android:textColor="#ff9f9f9f"
                android:textSize="@dimen/dimen_12" />

            <TextView
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_6"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/shape_red_dot" />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>
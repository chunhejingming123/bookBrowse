<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_6" />
            <gradient android:angle="270" android:endColor="#53E5FF" android:startColor="#06B7D7" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_6" />
            <gradient android:angle="0" android:endColor="#06B7D7" android:startColor="#53E5FF" android:type="linear" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_45" />
            <gradient android:angle="270"  android:endColor="#4CA0F5" android:startColor="#44BBFF" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_45" />
            <gradient android:angle="0" android:endColor="#44BBFF" android:startColor="#4CA0F5" android:type="linear" />
        </shape>
    </item>
</selector>